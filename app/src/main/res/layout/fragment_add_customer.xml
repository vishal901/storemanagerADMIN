<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbars="horizontal">

    <include
        android:id="@+id/toolbar_add_customer"
        layout="@layout/toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/img_customerdetail"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_add_user" />

        <EditText

            android:id="@+id/edt_name_customerdetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn_ractangle_border"
            android:ems="10"
            android:hint="@string/fname"
            android:inputType="textPersonName"
            android:lines="1"
            android:paddingLeft="15dp"
            android:textSize="12sp" />

        <EditText

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn_ractangle_border"
            android:ems="10"
            android:hint="@string/lname"
            android:inputType="textPersonName"
            android:lines="1"
            android:paddingLeft="15dp"
            android:textSize="12sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">


            <belka.us.androidtoggleswitch.widgets.ToggleSwitch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                custom:inactiveTextColor="@color/btn"
                custom:textToggleLeft="Male"
                custom:textToggleRight="Female"
                custom:toggleWidth="100dp" />

            <EditText
                android:id="@+id/edt_address_customerdetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_ractangle_border1"
                android:gravity="top"
                android:hint="Address"
                android:lines="5"
                android:maxLines="5"
                android:paddingLeft="15dp"
                android:paddingTop="5dp"
                android:textSize="12sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <EditText
                    android:id="@+id/edt_mobile_customerdetail"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginRight="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/border_small"
                    android:digits="0123456789"
                    android:gravity="center"
                    android:hint="Mobile"
                    android:inputType="number"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/edt_landline_customerdetail"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/border_small"
                    android:digits="0123456789"
                    android:gravity="center"
                    android:hint="Landline"
                    android:inputType="number"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <EditText
                    android:id="@+id/edt_email_customerdetail"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/border_small"
                    android:gravity="left|center"
                    android:hint="Email Address"
                    android:paddingLeft="10dp"
                    android:textSize="12sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                >

                <Button
                    android:id="@+id/btn_edit_customerdetail"
                    style="@style/btnbeckground"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="save" />


            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</ScrollView>
</LinearLayout>