<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="in.vaksys.storemanager">

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".extra.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.LoginActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.AddCustomerActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.PaymentActivity"
            android:label="PAYMENT"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.OrderList_Detail_Activity"
            android:label="Order Details"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.Create_Order_Activity"
            android:label="Create Odrder"
            android:screenOrientation="portrait" />
        <activity android:name=".activity.UpdateOrderActivity"
            android:label="UpdateOrder"
            android:screenOrientation="portrait"/>
    </application>

</manifest>